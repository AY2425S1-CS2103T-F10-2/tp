<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.stage.Stage?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<fx:root resizable="false" title="Help Page" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@HelpWindow.css" />
      </stylesheets>

      <VBox fx:id="helpContainer" spacing="10">
        <HBox alignment="TOP_LEFT">
          <Label fx:id="helpMessage" wrapText="true"/>
        </HBox>

        <VBox alignment="CENTER">
          <Label fx:id="helpKeywords"/>
        </VBox>

        <opaqueInsets>
          <Insets bottom="20.0" left="10.0" right="20.0" top="10.0" />
        </opaqueInsets>
        <padding>
          <Insets bottom="20.0" left="10.0" right="20.0" top="10.0" />
        </padding>
      </VBox>
    </Scene>
  </scene>
</fx:root>
